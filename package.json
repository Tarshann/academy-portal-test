{
  "name": "academy-portal",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "20.x",
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "start": "pnpm --filter \"@academy-portal/server\" start:server",
    "start:web": "pnpm --filter \"@academy-portal/web\" start",
    "start:mobile": "pnpm --filter \"@academy-portal/mobile\" start",
    "start:server": "pnpm --filter \"@academy-portal/server\" start:server",
    "build:web": "echo 'Building web package...' && pnpm --filter \"@academy-portal/web\" build && echo 'Web build complete' && ls -la packages/web/build",
    "build:server": "echo 'Server is ready to run'",
    "build:mobile": "pnpm --filter \"@academy-portal/mobile\" build",
    "test": "pnpm --filter \"@academy-portal/server\" test",
    "deploy": "node scripts/deploy.js",
    "heroku-postbuild": "pnpm install --no-frozen-lockfile && pnpm --filter \"@academy-portal/web\" build"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.0",
    "prettier": "^3.0.0",
    "typescript": "4.9.5"
  },
  "dependencies": {
    "@react-native-community/netinfo": "^11.4.1",
    "cross-env": "^7.0.3",
    "date-fns": "^4.1.0",
    "expo-document-picker": "^13.0.3",
    "expo-image-picker": "^16.0.6",
    "lodash": "^4.17.21",
    "react-native-paper": "^5.13.1",
    "react-scripts": "^3.4.4",
    "socket.io-client": "^4.8.1"
  }
}
