    "express-validator": "^7.0.1",
    "helmet": "^7.2.0",
    "http": "^0.0.1-security",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^7.8.6",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.3",
    "socket.io": "^4.8.1",
    "swagger-ui-express": "^5.0.1",
    "tunnel": "^0.0.6"
  },
  "devDependencies": {
    "concurrently": "^8.0.1",
