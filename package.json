{
  "name": "academy-portal",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "18.x"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start": "cd packages/server && npm start",
    "start:web": "cd packages/web && npm start",
    "start:mobile": "cd packages/mobile && npm start",
    "start:server": "cd packages/server && npm start",
    "build:web": "node scripts/build-web.js",
    "build:mobile": "node scripts/build-mobile.js",
    "test": "jest",
    "deploy": "node scripts/deploy.js",
    "heroku-postbuild": "cd packages/server && npm install --legacy-peer-deps"
  },
  "devDependencies": {
    "lerna": "^7.1.4",
    "jest": "^29.6.0",
    "typescript": "4.9.5",
    "prettier": "^3.0.0",
    "eslint": "^8.45.0"
  }
}
