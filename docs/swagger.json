{
  "swagger": "2.0",
  "info": {
    "title": "Academy Portal API",
    "version": "1.0.0",
    "description": "API documentation for The Academy Portal"
  },
  "basePath": "/api",
  "schemes": ["http", "https"],
  "paths": {
    "/auth/register": {
      "post": {
        "summary": "Register a new user",
        "tags": ["Authentication"],
        "parameters": [
          {
            "name": "user",
            "in": "body",
            "description": "User registration data",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "firstName": {"type": "string"},
                "lastName": {"type": "string"},
                "email": {"type": "string"},
                "password": {"type": "string"},
                "phoneNumber": {"type": "string"}
              }
            }
          }
        ],
        "responses": {
          "201": {"description": "Registration successful"},
          "400": {"description": "Invalid input"}
        }
      }
    },
    "/auth/login": {
      "post": {
        "summary": "User login",
        "tags": ["Authentication"],
        "parameters": [
          {
            "name": "credentials",
            "in": "body",
            "description": "Login credentials",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {"type": "string"},
                "password": {"type": "string"}
              }
            }
          }
        ],
        "responses": {
          "200": {"description": "Login successful"},
          "400": {"description": "Invalid credentials"}
        }
      }
    }
  }
}
