// Create a docs folder and add a basic swagger.json file
const fs = require('fs');
const path = require('path');

const docsDir = path.join(__dirname, 'docs');
if (!fs.existsSync(docsDir)) {
  fs.mkdirSync(docsDir);
}

const swaggerJson = {
  "swagger": "2.0",
  "info": {
    "title": "Academy Portal API",
    "version": "1.0.0"
  },
  "paths": {}
};

fs.writeFileSync(
  path.join(docsDir, 'swagger.json'),
  JSON.stringify(swaggerJson, null, 2)
);
